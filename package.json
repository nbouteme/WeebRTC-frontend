{
  "name": "weebrtc-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@types/webrtc": "0.0.23",
    "register-service-worker": "^1.0.0",
    "typescript": "^3.1.6",
    "vue": "^2.5.16",
    "vue-class-component": "^6.0.0",
    "vue-i18n": "^8.3.1",
    "vue-property-decorator": "^6.0.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^10.12.2",
    "@types/sockjs-client": "^1.1.0",
    "@types/vue-i18n": "^7.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-plugin-pwa": "^3.0.0-beta.15",
    "@vue/cli-plugin-typescript": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-standard": "^3.0.0-rc.3",
    "@vue/eslint-config-typescript": "^3.0.0-rc.3",
    "vue-cli-plugin-webpack-bundle-analyzer": "^1.1.1",
    "vue-template-compiler": "^2.5.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "quotes": "off",
      "no-trailing-spaces": "off",
      "indent": "off",
      "curly": "off",
      "promise/param-names": "off"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 10%",
    "last 1 versions",
    "not ie <= 8"
  ]
}
